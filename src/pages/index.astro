	<!--
		================= MAIN ================= 
	-->
	<main class="section section_main">
		<canvas id="main__canvas"></canvas>
		<div class="main">
			<div class="main__content">
				<h2>Jeiser Vargas</h2>
				<img src="assets/image/intro.png" alt="intro">
				<a href="#" class="start_button" id="start_button"><span id="emoji">🔥</span>proyectos</a>
				<script>
					const emojis = ['⚡', '😜', '🤯', '🤓', '💖', '😎', '🧐', '🙃', '😳', '🔥'];
					const emoji_span = document.getElementById("emoji");
					emoji_span.innerHTML = emojis[0];
					document.getElementById("start_button").addEventListener("mouseenter", () => {
						emoji_span.innerHTML = emojis[Math.floor(Math.random() * emojis.length)];
					});

				</script>
			</div>
		</div>

		<nav class="language" aria-label="Language links">
			<div class="language__void">
				<div class="selected_language">
					<img
						src="assets/image/spain-flag.svg"
						alt="spanish"
					/>
